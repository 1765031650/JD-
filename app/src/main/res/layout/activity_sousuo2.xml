<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bw.arp.jd.Activity.Sousuo2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_fanhui"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/shape">
            <ImageView
                android:paddingTop="-10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/a_4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-5dp"/>
            <EditText
                android:id="@+id/edit_neirong"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:background="@drawable/shape"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="12dp"
                android:hint="运动户外超级品牌类日 跨店铺跨店铺" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/root"
                android:layout_marginRight="13dp"
                android:layout_marginTop="-5dp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sousuo2_rlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
