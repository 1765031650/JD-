<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/img_xihuan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/xin_black"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/img_xiaoxi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/xiaoxi_black"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/img_fenxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/fenxiang_black"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dz_vedio"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        fresco:placeholderImage="@mipmap/ic_launcher"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dz_slv"
        android:layout_width="50dp"
        fresco:placeholderImage="@mipmap/ic_launcher"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tv_neirong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="氨基酸打我的马达"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tv_shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2118-456-5221"
        android:layout_margin="10dp"
        />
</LinearLayout>