<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:id="@+id/frag">
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:id="@+id/left"
            android:layout_width="50dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/sao_hei" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textColor="#000"
                android:textSize="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_marginTop="8dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/shape">
            <ImageView
                android:paddingTop="-10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/a_4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-5dp"/>
            <TextView
                android:id="@+id/edit_sou"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:background="@drawable/shape"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="12dp"
                android:hint="运动户外超级品牌类日 跨店铺跨店铺" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/root"
                android:layout_marginRight="13dp"
                android:layout_marginTop="-5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l3"
            android:layout_marginTop="2dp"
            android:layout_width="50dp"
            android:paddingTop="8dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/a9v" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="#000"
                android:textSize="8dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>