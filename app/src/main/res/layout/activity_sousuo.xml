<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bw.arp.jd.Activity.SousuoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_fanhui"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/shape">
            <ImageView
                android:paddingTop="-10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/a_4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-5dp"/>
            <EditText
                android:id="@+id/edit_neirong"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:background="@drawable/shape"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="12dp"
                android:hint="运动户外超级品牌类日 跨店铺跨店铺" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/root"
                android:layout_marginRight="13dp"
                android:layout_marginTop="-5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="50dp"
            android:paddingTop="8dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sousuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="历史搜索"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#595858"/>
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/sousuo_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="清除所有浏览记录"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        />
</LinearLayout>
